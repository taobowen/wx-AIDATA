page{
  overflow-y:hidden;
}

.bg{
  background-color: #000000;
  height: 40px;
  display: flex;
  flex-direction: row;
}

.name{
  width: 35%;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  font-size: 20px;
  margin-top: 5px;
}

.search{
  width: 65%;
  display: flex;
  flex-direction: row;
  border: 1px solid #cccccc;
  height: 25px;
  margin-right: 10px;
  margin-top: 5px;
  background-color: #f6f5f3;
  border-radius: 5px;
  align-items: center;
}
.search image{
  margin-left: 10px;
}
.search input{
  margin-left: 10px;
  font-size: 13px;
}

.scroll-view_H{
  display: flex;
  flex-direction: row;
  -webkit-overflow-scrolling: touch;/*局部滚动设置*/
}
/*隐藏滚动条*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.section image{
  width: 100%;
  height: 100%;
}

.nav{
  display: flex;
  flex-direction: row;
  text-align: center;
}
.nav-item{
  width: 25%;
  font-size: 15px;
  line-height: 100%;
  padding-bottom: 10px;
  background-color: #ffffff;
  justify-content: center;
}
.navbg{
  background-color: #f6f5f3;
  height: 36px;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.nav2{
  width: 100%;
  height: 36px;
}

.normal{
  width: 16.66%;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
  display: inline-block;
  text-align: center;
}
.select{
  width: 16.66%;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
}


.item{
  margin: 10px;
}
.title{
  color: #444444;
  font-weight: bold;
  font-size: 18px;
}



.hr{
  border: 1px solid #cccccc;
  opacity: 0.2;
  margin-top: 10px;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
}

/*一行底部view样式*/
.tasks{
  padding: 10px;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #cccccc;
}

/*图片样式*/


.taskImage image{
  width: 120px;
  height: 120px;
}

.task-item{
  padding: 10px;
  display: flex;
}

.task-info{
  padding-left: 10px;
  display: flex;
  flex-direction: column;
}
.task-info .label{
  margin-right: 5px;
  color: #666;
}
.task-info .rating{
  color: #e09015;
}
.task-info .id{
  color: #cccccc;
}
.task-title{
 font-size: 18px;
 margin-right: 10px;
}
.task-time{
  font-size: 16px;
  color: #999;
}

