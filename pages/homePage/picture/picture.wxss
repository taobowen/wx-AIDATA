/* pages/Market/Market.wxss */
page{
  overflow-y:hidden;
}
.bg{
  background-color: #000000;
  height: 40px;
  display: flex;
  flex-direction: row;
}
.name{
  width: 30%;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  font-size: 20px;
}
.search{
  width: 70%;
  display: flex;
  flex-direction: row;
  border: 1px solid #cccccc;
  height: 25px;
  margin-right: 10px;
  background-color: #f6f5f3;
  border-radius: 5px;
  align-items: center;
}
.search image{
  margin-left: 10px;
}
.search input{
  margin-left: 10px;
  font-size: 13px;
}

.item{
  margin: 10px;
}
.title{
  color: #444444;
  font-weight: bold;
  font-size: 18px;
}
.pic image{
  margin-right: 10px;
}
.info{
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999999;
}



.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
}

/*一行底部view样式*/
.tasks{
  padding: 10px;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #cccccc;
}

/*图片样式*/
.taskImage{
  width: 120px;
}

.taskImage image{
  width: 100%;
  height: 120px;
}

.task-info{
  padding-left: 10px;
  display: flex;
  flex-direction: column;
}
 .task-info .lable{
  margin-right: 5px;
  color: #666;
  font-size: 15px;
} 
.task-info .rating{
  color: #e09015;
  font-size: 15px;
}
.task-info .id{
  color: #cccccc;
  font-size: 15px;
}
.task-title{
 font-size: 18px;
 margin-right: 10px;
}
.task-time{
  font-size: 16px;
  color: #999;
}



