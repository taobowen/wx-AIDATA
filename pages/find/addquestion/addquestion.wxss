.item{
  display: flex;
  flex-direction: row;
  height: 35px;
  background-color: #fff;
  border-bottom:  1px solid #999;
}
button::after {
  border: 0;
} 
button[plain]{
  border: none;
}
.cancel{
  text-align: center;
  position: absolute;
  background-color: #fff;
  font-weight: bold;
  font-size: 15px;
  left: 0;
}
.publish{
  text-align: center;
  position: absolute;
  background-color: #fff;
  font-weight: bold;
  font-size: 15px;
  right: 0;
}

.content{
  padding: 10px;
  display: flex;
  flex-direction: column;
}

.xian{
  border: 1px solid #999;
  margin-top: 10px;
  margin-bottom: 10px;
}

.title{
  margin-top: 20px;
  margin-bottom: 20px;
  font-size: 20px;
  font-weight: bold;
}

.taskdescribe{
  width: auto;
}

.region{
  width: 94%;
  background-color: #ffffff;
  border:  2px dotted #cccccc;
  border-radius: 10%;
  margin: 0 auto;
  margin-top: 10px;
  margin-bottom: 10px;
  text-align: center;
}