/* pages/useCenter/money/money.wxss */
.publish{
  text-align: center;
  position: absolute;
  background-color: #fff;
  font-weight: bold;
  font-size: 15px;
  right: 0;
}
.top{
  display: flex;
  flex-direction: row;
  height: 35px;
  background-color: #000;
  border-bottom:  1px solid #999;
}

.statement{
  margin-left: 10px;
  color: #fff;
  line-height: 35px;
  font-size: 15px;
}

button::after {
  border: 0;
} 

button[plain]{
  border: none;
  color: #fff;
}
.content{
  padding: 10px;
}
.content button{
  background-color: #30e4cc;
  color: #fff;
  width: 80%;
  height: 50px;
  line-height: 50px;
  font-size: 18px;
}
.score{
  justify-content: center;
  display: flex;
  flex-direction: row;
  font-size: 50px;
  font-weight: bold;
  text-align: center;
  height: 100px;
  line-height: 100px;
}
.detail{
  font-size: 15px;
  color: #aaa;
  text-align: center;
  height: 30px;
  line-height: 30px;
  margin-bottom: 30px;
}