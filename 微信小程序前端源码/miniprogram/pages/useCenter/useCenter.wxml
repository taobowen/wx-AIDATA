<!--pages/useCenter/useCenter.wxml-->
<view class='content'>
  <view class= 'body-view' >
    <loading hidden="{{hidden}}">
        加载中...
    </loading>
  </view>
  <view class='bg'>
    <view class='head'>
      <view class="userinfo" style='justify-content: center;'>
          <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
          <open-data class="userinfo-nickname" type='userNickName'></open-data>
      </view>
      <view class='detail'>
        <text></text>
      </view>
    </view>
    <view class='count'>
      <view class='desc'>
      <view>10</view>
      <view>关注</view>
      </view>
      <view class='desc'>
        <view>267</view>
        <view>粉丝</view>
      </view>
      <view class='desc' style='border:0px;'>
        <view>300</view>
        <view>7天访客</view>
      </view>
    </view>
  </view>
</view>

<view class='nav'>
  <button class='nav-item' style='justify-content: center' type='defalt' bindtap=''>
    <view>
      <view>
        <image src='/images/collection.png' style='width:23px;height:23px;'></image>
      </view>
      <view>
        收藏
      </view>
    </view>
  </button>
  <button class='nav-item' style='justify-content: center' type='defalt' bindtap=''>
    <view>
      <view>
        <image src='/images/history.png' style='width:23px;height:23px;'></image>
      </view>
      <view>
        历史
      </view>
    </view>
  </button>
  <button class='nav-item' style='justify-content: center' type='defalt' bindtap='seemoney'>
    <view>
      <view>
        <image src='/images/bank.png' style='width:23px;height:23px;'></image>
      </view>
      <view>
        账户
      </view>
    </view>
  </button>
</view>
<view class='hr'></view>
<view class='item'>
  <button class='order' open-type='getUserInfo' type='defalt' bindtap='loadingTap'>
    消息通知
  </button>
  <view class='detail2'>
    <text></text>
  </view>
</view>
<view class='hr'></view>
<view class='item'>
  <button class='order' open-type='getUserInfo' type='defalt' bindtap='seedetail'>
    我的任务
  </button>
  <view class='detail2'>
    <text></text>
  </view>
</view>
<view class='xian'></view>
<view class='item'>
  <button class='order' open-type='getUserInfo' type='defalt' bindtap='seedetail2'>
    发布任务
  </button>
  <view class='detail2'>
    <text></text>
  </view>
</view>
<view class='hr'></view>
<view class='item'>
  <button class='order' open-type='getUserInfo' type='defalt' bindtap=''>
    用户反馈
  </button>
  <view class='detail2'>
    <text></text>
  </view>
</view>
