/* pages/useCenter/uploaddata/uploaddata.wxss */
.item{
  display: flex;
  flex-direction: row;
  background-color: #cccccc
}
.hr{
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.xian{
  border: 1px solid #cccccc;
  opacity: 0.2;
}
.order{
  padding-top: 5px;
  padding-left: 15px;
  padding-bottom: 5px;
  font-size: 20px;
  font-weight: bold;
}
.detail2{
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: auto;
  line-height: 50px;
  color: #888888;
}
.tasks{
  padding: 10px;
  display: flex;
  border-bottom: 1px solid #000000;
}

.taskImage image{
  width: 120px;
  height: 120px;
}
.task-info{
  padding-left: 10px;
  display: flex;
  flex-direction: column;
  flex: 1;
}
.task-info .lable{
  margin-right: 5px;
  font-size: 15px;
  font-weight: bold;
  color: #666;
}
.task-info .rating{
  color: #e09015;
  font-size: 15px;
}
.task-info .id{
  color: #cccccc;
  font-size: 15px;
}
.task-rating{
  display: flex;
  flex-direction: row;
  float: left;
}
.task-title{
  font-size: 20px;
  font-weight: bold;
  margin: 0 auto;
}
.tab {
  float: left;
  width: 50%;
  text-align: center;
  padding: 10rpx 0;
  font-size: 20px;
}

.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  display: inline;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 2px solid #000000;
  font-weight: bold;
  font-size: 20px;
}

.swiper {
  width: 100%;
}

.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 0;
}

/*  */

.person_box {
  position: relative;
}

.phone_select {
  margin-top: 0;
  z-index: 100;
  position: absolute;
}

.select_one {
  text-align: center;
  background-color: rgb(239, 239, 239);
  width: 676rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 5%;
  border-bottom: 2rpx solid rgb(255, 255, 255);
}