/* pages/useCenter/uploaddata/detail2/senddata/senddata.wxss */
.top{
  display: flex;
  flex-direction: row;
  height: 35px;
  background-color: #000;
  border-bottom:  1px solid #999;
}

button::after {
  border: 0;
} 

button[plain]{
  border: none;
  color: #fff;
}
.cancel{
  text-align: center;
  position: absolute;
  background-color: #fff;
  font-weight: bold;
  font-size: 15px;
  left: 0;
}
.publish{
  text-align: center;
  position: absolute;
  background-color: #fff;
  font-weight: bold;
  font-size: 15px;
  right: 0;
}

.content{
  padding: 20px;
  background-color: #eeeeee;
  height: 100vh;
}
.title{
  margin-left: 15px;
  margin-top: 20px;
  margin-bottom: 20px;
  font-size: 20px;
  font-weight: bold;
}
.item{
  display: flex;
  flex-direction: column;
}
.taskname{
  border: 2px solid #cccccc;
  border-radius: 10%;
  width: 90%;
  margin: 0 auto;
  font-size: 15px;
  background-color: #ffffff;
}
.datasize{
  border: 2px solid #cccccc;
  border-radius: 10%;
  width: 50%;
  margin: 0 auto;
  font-size: 15px;
  background-color: #ffffff;
}
.taskdescribe{
  border: 2px dotted #cccccc;
  border-radius: 10%;
  background-color: #ffffff;
  width: 90%;
  margin: 0 auto;
  height: 200px;
  -moz-user-focus:true;
  cursor: 50;
  justify-content: flex-start;
  font-size: 15px;
}
.xian{
  width: 100%;
  border: 3px solid #cccccc;
  border-radius: 15%;
  opacity: 0.5;
  margin-top: 20px;
}
.picker{
  border: 2px solid #cccccc;
  border-radius: 10%;
  margin: 0 auto;
  background-color: #ffffff;
  font-size: 15px;
  font-weight: lighter;
  width: 40%;
}
.choose{
  margin-left: 20px;
  font-size:15px;
  flex-direction: row;
}
.region{
  width: 94%;
  background-color: #ffffff;
  border:  2px dotted #cccccc;
  border-radius: 10%;
  margin: 0 auto;
  margin-top: 10px;
  text-align: center;
}
.uploadfile{
  background-color: #ffffff;
}
.selectpicture{
  margin-top:20px;
  margin-bottom: 20px; 
}