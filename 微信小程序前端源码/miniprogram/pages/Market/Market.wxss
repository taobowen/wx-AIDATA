/* pages/Market/Market.wxss */
page{
  overflow-y:hidden;
}
.bg{
  background-color: #000000;
  height: 40px;
  display: flex;
  flex-direction: row;
}
.name{
  width: 30%;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  font-size: 20px;
}
.search{
  width: 70%;
  display: flex;
  flex-direction: row;
  border: 1px solid #cccccc;
  height: 25px;
  margin-right: 10px;
  background-color: #f6f5f3;
  border-radius: 5px;
  align-items: center;
}
.search image{
  margin-left: 10px;
}
.search input{
  margin-left: 10px;
  font-size: 13px;
}
.navbg{
  background-color: #f6f5f3;
  height: 36px;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.nav{
  width: 100%;
  height: 36px;
}

.scroll-view_H{
  height: 40px;
  display: flex;
  flex-direction: row;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.normal{
  width: 16.66%;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
  display: inline-block;
  text-align: center;
}
.select{
  width: 16.66%;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
}
.item{
  margin: 10px;
}
.title{
  color: #444444;
  font-weight: bold;
  font-size: 18px;
}
.pic image{
  margin-right: 10px;
}
.info{
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999999;
}
.desc{
  width: 90%;
}
.desc text{
  margin-right: 10px;
}
.opr{
  width: 10%;
}
.opr view{
  width: 17px;
  height: 12px;
  border: 1px solid #cccccc;
  line-height: 10px;
  text-align: center;
  border-radius: 5px;
}


.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
}

/*一行底部view样式*/
.tasks{
  padding: 10px;
  display: flex;
  border-bottom: 1px solid #cccccc;
}

/*图片样式*/
.taskImage{
  width: 120px;
}

.taskImage image{
  width: 100%;
  height: 120px;
}

.task-item{
  padding: 10px;
  display: flex;
}
.task-image{
  width: 128px;
}
.task-image image{
  width: 100%;
  height: 180px;
}
.task-info{
  padding-left: 10px;
  flex: 1;
}
.task-info view{
  margin-bottom: 5px;
}
.task-info .label{
  margin-right: 5px;
  color: #666;
}
.task-info .rating{
  color: #e09015;
}
.task-info .id{
  color: #cccccc;
}
.task-title{
 font-size: 18px;
 margin-right: 10px;
}
.task-time{
  font-size: 16px;
  color: #999;
}
